{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "NLang",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#preprocessor" },
		{ "include": "#functions" },
		{ "include": "#modifiers" },
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#numbers" },
		{ "include": "#operators" },
		{ "include": "#punctuation" },
		{ "include": "#identifiers" },
		{ "include": "#other" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "/\\*",
					"beginCaptures": {
						"0": { "name": "punctuation.definition.comment.begin.nlang" }
					},
					"end": "\\*/",
					"endCaptures": {
						"0": { "name": "punctuation.definition.comment.end.nlang" }
					},
					"name": "comment.block.nlang",
					"patterns": [
						{ "include": "#comments" }
					]
				},
				{
					"match": "//.*$",
					"name": "comment.line.double-slash.nlang"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "\\b(abstract|as|base|bool|break|byte|case|catch|char|checked|class|const|continue|decimal|default|delegate|do|double|else|enum|event|explicit|extern|false|finally|fixed|float|for|foreach|goto|if|implicit|in|int|interface|internal|is|lock|long|namespace|new|null|object|operator|out|override|params|private|protected|public|readonly|ref|return|sbyte|sealed|short|sizeof|stackalloc|static|string|struct|switch|this|throw|true|try|typeof|uint|ulong|unchecked|unsafe|ushort|using|virtual|void|volatile|while)\\b",
					"name": "keyword.nlang"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "(\\*|\\w+)\\(",
					"captures": {
						"1": { "name": "entity.name.function.nlang" }
					}
				}
			]
		},
		"modifiers": {
			"patterns": [
				{
					"match": "\\((\\w+)\\)(\\w+)",
					"captures": {
						"1": { "name": "entity.name.function.nlang" },
						"2": { "name": "entity.name.function.nlang" }
					}
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"begin": "\"",
					"beginCaptures": {
						"0": { "name": "punctuation.definition.string.begin.nlang" }
					},
					"end": "\"",
					"endCaptures": {
						"0": { "name": "punctuation.definition.string.end.nlang" }
					},
					"name": "string.quoted.double.nlang",
					"patterns": [
						{
							"match": "\\\\.",
							"name": "constant.character.escape.nlang"
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"match": "\\b(0x[a-fA-F0-9]+|\\d+(\\.\\d*)?|\\.\\d+)\\b",
					"name": "constant.numeric.nlang"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "\\s==|\\s!=\\|\\+|\\-|\\*|\\/|\\%|\\&\\&|\\|\\||\\!|\\=\\=|\\!\\=|\\<|\\>|\\<\\=|\\>\\=|\\=|\\+\\=|\\-\\=|\\*\\=|\\/\\=|\\%\\=|\\&\\=|\\|\\=|\\^\\=|\\&\\&\\=|\\|\\|\\=|\\?|\\:|\\,|\\;|\\.",
					"name": "keyword.operator.nlang"
				},
				{
					"match": "(\\bfunc\\b)(\\s+)([a-zA-Z_][a-zA-Z0-9_]*)(\\s*)(\\()",
					"captures": {
						"1": { "name": "storage.type.function.nlang" },
						"2": { "name": "text.nlang" },
						"3": { "name": "entity.name.function.nlang" },
						"4": { "name": "text.nlang" },
						"5": { "name": "punctuation.definition.parameters.begin.nlang" }
					}
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"match": "\\(|\\)|\\[|\\]|\\{|\\}",
					"name": "punctuation.section.nlang"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
					"name": "variable.other.nlang"
				}
			]
		},
		"preprocessor": {
			"patterns": [
				{
					"match": "^\\s*(import|cimport)\\s+.*$",
					"name": "storage.type.function.nlang"
				},
				{
					"match": "(\\bimport\\b)(\\s+)(\\()",
					"captures": {
						"1": { "name": "storage.type.function.nlang" },
						"2": { "name": "text.nlang" },
						"3": { "name": "punctuation.definition.parameters.begin.nlang" }
					}
				}
			]
		},
		"other": {
			"patterns": [
				{
					"match": "\\b(\\d+)(\\s*)(\\()",
					"captures": {
						"1": { "name": "constant.numeric.nlang" },
						"2": { "name": "text.nlang" },
						"3": { "name": "punctuation.definition.parameters.begin.nlang" }
					}
				}
			]
		}
	},
	"scopeName": "source.nlang"
}